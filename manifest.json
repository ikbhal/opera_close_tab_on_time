{
	"manifest_version": 2,

	"name": "Opera Extensions — Getting Started",
	"description": "Sample extension for the “Making your first extension” article",
	"version": "1.0",
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": ["content.css"],
			"js": ["jquery-3.5.1.min.js", "content.js"]
		}
	],
	"commands": {
		
		"close_in_5_minutes": {
			"suggested_key": {
			  "default": "Ctrl+Shift+1",
			  "mac": "MacCtrl+Shift+2"
			},
			"description": "Close current tab in 5 minutes"
		},
		"close_in_10_minutes": {
		  "suggested_key": {
			"default": "Ctrl+Shift+2",
			"mac": "MacCtrl+Shift+2"
		  },
		  "description": "Close current tab in 10 mintes"
		},
		"close_in_15_minutes": {
		  "suggested_key": {
			"default": "Ctrl+Shift+3",
			"mac": "MacCtrl+Shift+3"
		  },
		  "description": "Close current tab in 15 mintes"
		},
		"close_in_30_minutes": {
		  "suggested_key": {
			"default": "Ctrl+Shift+4",
			"mac": "MacCtrl+Shift+4"
		  },
		  "description": "Close current tab in 30 mintes"
		}
	},

	"permissions": ["tabs", "<all_urls>",  "storage"],
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Go to Dev.Opera!"
	}
}